package assignment7;

public class IntToStringConversion {
	public static void main(String[] args) {

		// method1
		System.out.println("integer to string "+Integer.toString(123));

		// method2
		Integer a = 123;
		System.out.println("integer to string "+a.toString());
		
		//method3
		String s = String.valueOf(123);
		System.out.println("integer to string " + s);
		
		//method4
		String s1 = String.format("%d", 123);
		System.out.println("integer to string "+s1);
	}

}

